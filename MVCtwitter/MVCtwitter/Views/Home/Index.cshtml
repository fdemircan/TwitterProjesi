@{
    ViewBag.Title = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="col-md-12">
    <div class="card">
        <div class="header">
            <h4 class="title">Giriş Yapın</h4>
        </div>
        <div class="content">
            <div class="row">
                <div class="col-md-12">
                    <label>Kullanıcı Adı</label>
                    <input type="text" class="form-control" placeholder="Kullanıcı Adınızı Giriniz" id="kullanici">
                </div>
                <div class="col-md-12">
                    <div class="form-group">
                        <label>Parola</label>
                        <input type="password" class="form-control" placeholder="parola" id="parola">
                    </div>
                </div>
            </div>
            <div class="col-md-2 buton">
                <button type="submit" class="btn btn-info btn-fill pull-right" id="girisYap">Giriş Yapın</button>
            </div>
            <div class="col-md-2">
                <button type="submit" class="btn btn-info btn-fill pull-right" id="kayitOl">Kayıt Ol</button>
            </div>
            <div class="clearfix buton"></div>
        </div>
    </div>
</div>

@section scripts{
    <script>
        $("#kayitOl").click(function () {
            location.href = "/Home/KayitOl";
        });

        $("#girisYap").click(function () {
            var kullaniciAdi = $("#kullanici").val();
            var parola = $("#parola").val();

            $.post("/Home/GirisYap", { kullanici: kullaniciAdi, parola: parola }, function (data) {
                if (data == 1) {
                    location.href = "/Home/twitler";
                }
                else
                    alert("Böyle bir kullanıcı yoktur.");
            });
        });
     </script>
}
